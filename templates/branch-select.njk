{% extends "templates/layouts/app.html" %} {% block content %} {% set page_title
= "offers" %} {% include "templates/components/header.njk" %} {% include
"templates/components/sidebar.njk" %}

<main class="main-content">
  <div class="branch-select p-3 bg-gary">
    <div class="row">
      <div class="col-md-6">
        <div class="buttons-area">
          <button type="submit" class="btn-main btn-block">
           <i class="icon-add"></i> اضافة ادارة جديدة
          </button>
          <button type="submit" class="btn-main btn-block">
            <i class="icon-setting"></i> اعدادات الادارة
          </button>
        </div>
      </div>
      <div class="col-md-6">
        <button type="submit" class="btn-main btn-ghost float-left mt-5">
