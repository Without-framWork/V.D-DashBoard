      <tbody>
        {% for i in range(0,10) -%}

        <tr>
          <th scope="row">ادارة الرخص</th>
          <td> رئيسي   </td>
          <td>الرياض</td>

          <td>10</td>
          <td>20</td>

          <td><a href="#"><i class="icon-arrow-left"></i></a></td>
        </tr>

        {%- endfor %}
      </tbody>
    </table>
  </div>
</main>

{% endblock %}
